#color index green default ~p  # To me

#color index yellow default "~v"        # collapsed thread

color index brightyellow default ~N  # New
color index brightyellow default "~v~(~N)"        # collapsed thread with New
color index blue default ~T # Tagged
color index blue default "~v~(~T)"        # collapsed thread with Tagged
color index brightred default ~D # Deleted
color index red default "~v~(~D)"        # collapsed thread with Deleted
