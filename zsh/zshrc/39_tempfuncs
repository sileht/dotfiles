function mkfile(){ # MOTD
    qemu-img create -f raw "$2" "$1"
    return $?
}

cdt () {
  cd $(mktemp -td cdt.XXXXXXXX)
  pwd
}

vit () {
  local tmpfile=$(mktemp -t vit.XXXXXXXX)
  [ "$1" = '-' ] && cat >| $tmpfile
  sensible-editor $tmpfile </dev/tty >/dev/tty
  echo $tmpfile
}

# vim:ft=zsh
