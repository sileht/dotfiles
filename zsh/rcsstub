. $ZDOTDIR/logging
. $ZDOTDIR/util

if [[ -o rcs ]]; then
  __do_debug && set -x || :

  file="%1N"; file="${(%)file}"
  . $ZDOTDIR/sourcedir
  sourcedir $ZDOTDIR/${file#.}

  __do_debug && set +x || :
fi

# vim:ft=zsh
