#!/bin/sh

 exec rofi -combi-modi "window,drun,run,ssh" -theme gruvbox-dark-hard -show combi -show-icons -font "MesloLGS Nerd Font 18"

cachedir=${XDG_CACHE_HOME:-"$HOME/.cache"}
if [ -d "$cachedir" ]; then
	cache=$cachedir/dmenu_run
else
	cache=$HOME/.dmenu_cache # if no xdg dir, fall back to dotfile in ~
fi

(
	IFS=:
	if stest -dqr -n "$cache" $PATH; then
        stest -flx $PATH | sed -e 's/^.*/&\n:&/g' | sort | uniq | tee "$cache" | dmenu "$@"
	else
		dmenu "$@" < "$cache"
    fi
) | sed -e 's/^:/sudo /g' | ${SHELL:-"/bin/sh"} &
