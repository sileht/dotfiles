#!/bin/bash

theme_set=$(echo "$@" | grep theme)
[ ! "$theme_set" ] && theme="-theme sidebar-sileht"

exec /usr/bin/rofi "$@" \
    $theme \
    -font "Noto Sans Symbolas2 12" \
    -i \
    -show-icons \
    -terminal st \
    -run-shell-command "{terminal} zsh -i -c '{cmd} ; echo Enter to exit. ; read'" \
    -markup-rows \
    -calc-command "echo -n '{result}' | xclip" \
