#!/opt/homebrew/bin/bash

set -e
set -x
set -o pipefail

declare -A fixers=(["poetry.lock"]="poetry lock --no-update" ["package-lock.json"]="npm install")

for file in ${!fixers[*]}; do
    echo -ne "Checking $file..."
    set +e
    is_conflicting=$(git status --short | grep "^UU ${file}\$")
    set -e
    if [ "$is_conflicting" ]; then
        echo " fixing"
        git checkout HEAD "$file"
        bash -c "${fixes[$key]}"
        git add "$file"
    else
        echo " nothing to do"
    fi
done
 
if git rev-parse --verify CHERRY_PICK_HEAD ; then
    git cherry-pick --continue
elif git rev-parse --verify REBASE_HEAD ; then
    git rebase --continue
fi
