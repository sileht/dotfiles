#!/bin/bash
set -e

feh --bg-scale "${HOME}/.cache/wallpaper.jpg"

wget -q -O ${HOME}/.cache/wallpaper-tmp.jpg https://unsplash.it/1920/1200/?random

#mv -f ${HOME}/.cache/wallpaper{-tmp,}.jpg
size=32
convert ${HOME}/.cache/wallpaper-tmp.jpg -crop 1920x$((1200 - $size))+0+$size -background black -splice 0x$size ${HOME}/.cache/wallpaper.jpg

feh --bg-scale "${HOME}/.cache/wallpaper.jpg"
betterlockscreen -u "${HOME}/.cache/wallpaper.jpg" -b
